<Window x:Class="LidarrCompanion.CoverArtWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:LidarrCompanion"
xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
mc:Ignorable="d"
Title="Cover Art Management" Height="800" Width="1400"
WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Left Panel: Files List -->
        <GroupBox Grid.Column="0" Grid.Row="0" Header="Files Needing Cover Art" Margin="0,0,5,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <ListBox Grid.Row="0" 
                         x:Name="lst_Files"
                         SelectionMode="Single"
                         SelectionChanged="FilesList_SelectionChanged"
                         Margin="5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✓" 
                                           Foreground="Green" 
                                           FontWeight="Bold" 
                                           Margin="0,0,5,0"
                                           Visibility="{Binding HasCoverArt, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Text="✗" 
                                           Foreground="Red" 
                                           FontWeight="Bold" 
                                           Margin="0,0,5,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasCoverArt}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Text="{Binding FileName}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <TextBlock Grid.Row="1" 
                           x:Name="txt_Status"
                           Text=""
                           Margin="5"
                           FontStyle="Italic"
                           TextWrapping="Wrap"/>
            </Grid>
        </GroupBox>

        <!-- Center Panel: Web Browser for Image Search -->
        <GroupBox Grid.Column="1" Grid.Row="0" Header="Image Search" Margin="5,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Search Bar -->
                <Grid Grid.Row="0" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Label Grid.Column="0" Content="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox Grid.Column="1" 
                             x:Name="txt_Search" 
                             Height="25"
                             VerticalContentAlignment="Center"
                             KeyDown="txt_Search_KeyDown"/>
                    <Button Grid.Column="2" 
                            Content="Search Images" 
                            Width="100" 
                            Height="25" 
                            Margin="5,0,0,0"
                            Click="btn_Search_Click"/>
                </Grid>
                
                <!-- Web Browser -->
                <Border Grid.Row="1" 
                        BorderBrush="Gray" 
                        BorderThickness="1" 
                        Margin="5">
                    <wv2:WebView2 x:Name="webBrowser" 
                                  AllowDrop="True"/>
                </Border>
            </Grid>
        </GroupBox>

        <!-- Right Panel: Current File Info and Image Drop Zone -->
        <GroupBox Grid.Column="2" Grid.Row="0" Header="Current File" Margin="5,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- File Info -->
                <StackPanel Grid.Row="0" Margin="10">
                    <TextBlock Text="Artist:" FontWeight="Bold" Margin="0,5,0,2"/>
                    <TextBlock x:Name="txt_Artist" Text="-" TextWrapping="Wrap"/>
                    
                    <TextBlock Text="Album:" FontWeight="Bold" Margin="0,10,0,2"/>
                    <TextBlock x:Name="txt_Album" Text="-" TextWrapping="Wrap"/>
                    
                    <TextBlock Text="File:" FontWeight="Bold" Margin="0,10,0,2"/>
                    <TextBlock x:Name="txt_FileName" Text="-" TextWrapping="Wrap"/>
                </StackPanel>
                
                <!-- Image Drop Zone -->
                <Border Grid.Row="1" 
                        x:Name="ImageDropZone"
                        BorderBrush="Gray" 
                        BorderThickness="2" 
                        Margin="10"
                        Background="Transparent"
                        AllowDrop="True"
                        Drop="ImageDropZone_Drop"
                        DragOver="ImageDropZone_DragOver">
                    <Grid>
                        <TextBlock Text="Drag image here" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   FontStyle="Italic"
                                   Foreground="Gray"
                                   x:Name="txt_DropHint"
                                   IsHitTestVisible="False"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="20"/>
                        <Image x:Name="img_Preview" 
                               Stretch="Uniform"
                               IsHitTestVisible="False"/>
                        <TextBlock x:Name="txt_ImageDimensions"
                                   Text=""
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom"
                                   Margin="5"
                                   FontSize="10"
                                   Foreground="Gray"
                                   Background="#CC000000"
                                   Padding="3"
                                   IsHitTestVisible="False"
                                   Visibility="Collapsed"/>
                    </Grid>
                </Border>
                
                <!-- Buttons -->
                <StackPanel Grid.Row="2" Margin="10,0,10,10">
                    <Separator Margin="0,5"/>
                    <TextBlock Text="Tip: Search for images above, then drag them here" 
                               TextWrapping="Wrap" 
                               FontStyle="Italic"
                               Foreground="Gray"
                               Margin="0,5"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Bottom: Action Buttons -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button x:Name="btn_SaveAndNext"
                    Content="Save &amp; Next"
                    Width="120"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="btn_SaveAndNext_Click"
                    IsEnabled="False"/>
            <Button x:Name="btn_SkipToNext"
                    Content="Skip to Next"
                    Width="120"
                    Height="35"
                    Margin="0,0,20,0"
                    Click="btn_SkipToNext_Click"/>
            <Button x:Name="btn_Complete"
                    Content="Complete"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="btn_Complete_Click"
                    IsEnabled="False"/>
            <Button x:Name="btn_Abort"
                    Content="Abort"
                    Width="100"
                    Height="35"
                    Click="btn_Abort_Click"/>
        </StackPanel>
    </Grid>
</Window>
