<Window x:Class="LidarrCompanion.SiftWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LidarrCompanion"
        mc:Ignorable="d"
        Title="Sift Tracks" Height="996" Width="900"
        MinHeight="850" MinWidth="900"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Main content area -->
        <Grid Grid.Row="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Current track display -->
            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="2" Padding="20" CornerRadius="5">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Cover art -->
                    <Image x:Name="img_CoverArt" Width="200" Height="200" Stretch="Uniform" Margin="0,0,0,5">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value="{Binding CoverArt}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CoverArt}" Value="{x:Null}">
                                        <Setter Property="Source" Value="{x:Null}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    
                    <!-- Progress slider and duration -->
                    <Grid Width="200" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Slider Grid.Column="0" x:Name="slider_Progress" 
                                Minimum="0" Maximum="100" Value="0"
                                VerticalAlignment="Center" Margin="0,0,5,0"
                                IsEnabled="False"/>
                        
                        <TextBlock Grid.Column="1" x:Name="txt_Duration" 
                                   Text="0:00" FontSize="10" 
                                   VerticalAlignment="Center" Foreground="Gray"/>
                    </Grid>
                    
                    <!-- Metadata: Artist and Title -->
                    <TextBlock x:Name="txt_Artist" Text="{Binding Artist}" 
                               FontSize="16" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap"
                               Margin="0,0,0,2"/>
                    
                    <TextBlock x:Name="txt_Title" Text="{Binding Title}" 
                               FontSize="14" TextAlignment="Center" TextWrapping="Wrap"
                               Margin="0,0,0,5"/>
                    
                    <!-- Contributing Artists (if any) -->
                    <TextBlock x:Name="txt_ContributingArtists" Text="{Binding ContributingArtists}" 
                               FontSize="11" FontStyle="Italic" TextAlignment="Center" TextWrapping="Wrap"
                               Margin="0,0,0,5" Foreground="Gray">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ContributingArtists}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    
                    <!-- File name -->
                    <TextBlock x:Name="txt_CurrentFileName" Text="{Binding FileName}" 
                               FontSize="11" TextAlignment="Center" TextWrapping="Wrap"
                               Margin="0,0,0,10" Foreground="DarkGray"/>
                </StackPanel>
            </Border>

            <!-- Control buttons -->
            <Grid Grid.Row="1" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Play button (center, above other controls) -->
                <Button Grid.Column="1" x:Name="btn_Play" Content="Play (Space)" Width="120" Height="40" 
                        Click="btn_Play_Click" Margin="0,0,0,10"/>
                
                <!-- Keep and Trash buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,50,10,0">
                    <Button x:Name="btn_Keep" Content="Keep (Y)" Width="100" Height="35" 
                            Click="btn_Keep_Click" Margin="0,0,5,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,50,0,0">
                    <Button x:Name="btn_Trash" Content="Trash (N)" Width="100" Height="35" 
                            Click="btn_Trash_Click" Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Timeline navigation buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Seek buttons -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btn_SeekBackward" Content="â—„ -5% (-)" Width="70" Height="30" 
                            Click="btn_SeekBackward_Click" Margin="5"/>
                    <Button x:Name="btn_Seek15" Content="1 (15%)" Width="65" Height="30" 
                            Click="btn_Seek15_Click" MouseRightButtonUp="btn_SeekPosition_RightClick"
                            Tag="15" Margin="5"/>
                    <Button x:Name="btn_Seek30" Content="2 (30%)" Width="65" Height="30" 
                            Click="btn_Seek30_Click" MouseRightButtonUp="btn_SeekPosition_RightClick"
                            Tag="30" Margin="5"/>
                    <Button x:Name="btn_Seek45" Content="3 (45%)" Width="65" Height="30" 
                            Click="btn_Seek45_Click" MouseRightButtonUp="btn_SeekPosition_RightClick"
                            Tag="45" Margin="5"/>
                    <Button x:Name="btn_Seek60" Content="4 (60%)" Width="65" Height="30" 
                            Click="btn_Seek60_Click" MouseRightButtonUp="btn_SeekPosition_RightClick"
                            Tag="60" Margin="5"/>
                    <Button x:Name="btn_Seek75" Content="5 (75%)" Width="65" Height="30" 
                            Click="btn_Seek75_Click" MouseRightButtonUp="btn_SeekPosition_RightClick"
                            Tag="75" Margin="5"/>
                    <Button x:Name="btn_Seek90" Content="6 (90%)" Width="65" Height="30" 
                            Click="btn_Seek90_Click" MouseRightButtonUp="btn_SeekPosition_RightClick"
                            Tag="90" Margin="5"/>
                    <Button x:Name="btn_SeekForward" Content="â–º +5% (+)" Width="70" Height="30" 
                            Click="btn_SeekForward_Click" Margin="5"/>
                </StackPanel>

                <!-- Volume control -->
                <Grid Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="ðŸ”Š Volume:" VerticalAlignment="Center" 
                               Margin="0,0,10,0" FontSize="12"/>
                    <Slider Grid.Column="1" x:Name="slider_Volume" 
                            Minimum="0" Maximum="100" Value="50"
                            Width="150" VerticalAlignment="Center"
                            ValueChanged="slider_Volume_ValueChanged"/>
                    <TextBlock Grid.Column="2" x:Name="txt_Volume" Text="50%" 
                               VerticalAlignment="Center" Margin="10,0,0,0" 
                               FontSize="12" Width="35"/>
                </Grid>

                <!-- Status text -->
                <TextBlock Grid.Row="2" x:Name="txt_Status" Text="" FontSize="12" 
                           TextAlignment="Center" Margin="0,10,0,0" Foreground="Gray"/>
            </Grid>
        </Grid>

        <!-- Next tracks list -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="20,0,20,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Next 10 Tracks:" FontWeight="Bold" Margin="10,5"/>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
                    <ItemsControl x:Name="list_NextTracks">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FileName}" 
                                          TextWrapping="Wrap" 
                                          Margin="0,2"
                                          Padding="5,2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
