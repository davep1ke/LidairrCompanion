<Application x:Class="LidarrCompanion.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LidarrCompanion"
             StartupUri="/Forms/MainWindow/MainWindow.xaml"
             xmlns:helpers="clr-namespace:LidarrCompanion.Helpers">
    <Application.Resources>
        <helpers:ActionToBackgroundConverter x:Key="ActionToBackgroundConverter"/>
        <helpers:ActionToForegroundConverter x:Key="ActionToForegroundConverter"/>
        <helpers:ThemedColorConverter x:Key="ThemedColorConverter"/>
        
        <!-- Themed ListView selection colors - these override system defaults globally -->
        <!-- These will be updated by ThemeManager when dark mode toggles -->
        <SolidColorBrush x:Key="ListViewItemSelectionBrush" Color="#FF505050"/>
        <SolidColorBrush x:Key="ListViewItemHoverBrush" Color="#FF414141"/>
    </Application.Resources>
</Application>
