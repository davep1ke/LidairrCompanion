<Window x:Class="LidarrCompanion.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LidarrCompanion"
        mc:Ignorable="d"
        Title="Settings" Height="600" Width="1032">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="420" />
        </Grid.ColumnDefinitions>

        <!-- Left: DataGrid (fills and provides scrollbars) -->
        <Grid Grid.Column="0" Margin="10">
            <DataGrid x:Name="SettingsGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      ItemsSource="{Binding SettingsCollection}"
                      VerticalAlignment="Stretch"
                      HorizontalAlignment="Stretch"
                      CellEditEnding="SettingsGrid_CellEditEnding"
                      IsReadOnly="False"
                      >
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="FontWeight" Value="Normal" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                <Setter Property="FontWeight" Value="Bold" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Property" Binding="{Binding Category}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Property" Binding="{Binding Name}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" />
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" IsReadOnly="True" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Right: Status panel with boxes and connecting arrows -->
        <Border Grid.Column="1" Margin="6" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4" Padding="8">
            <!-- Use a Grid with two rows: main area and status bar -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <!-- Two-layer approach: canvas for arrows below, grid of boxes above -->
                    <Canvas x:Name="ArrowsCanvas" IsHitTestVisible="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" Panel.ZIndex="0">
                        <!-- Lines/arrows connecting centers of grid cells. Stroke will be bound to code-behind properties. -->
                        <Line x:Name="Line_LidarrURL_Releases" MouseEnter="Arrow_MouseEnter" MouseLeave="Arrow_MouseLeave" StrokeThickness="3" Stroke="Gray" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                        <Line x:Name="Line_Releases_Import" MouseEnter="Arrow_MouseEnter" MouseLeave="Arrow_MouseLeave" StrokeThickness="3" Stroke="Gray" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                        <Line x:Name="Line_Releases_NotSelected" MouseEnter="Arrow_MouseEnter" MouseLeave="Arrow_MouseLeave" StrokeThickness="3" Stroke="Gray" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                        <Line x:Name="Line_Releases_Defer" MouseEnter="Arrow_MouseEnter" MouseLeave="Arrow_MouseLeave" StrokeThickness="3" Stroke="Gray" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />

                        <Line x:Name="Line_LidarrURL_Backup" MouseEnter="Arrow_MouseEnter" MouseLeave="Arrow_MouseLeave" StrokeThickness="3" Stroke="Gray" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                        <Line x:Name="Line_Import_Copy" MouseEnter="Arrow_MouseEnter" MouseLeave="Arrow_MouseLeave" StrokeThickness="3" Stroke="Gray" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                        <Line x:Name="Line_NotSelected_Copy" MouseEnter="Arrow_MouseEnter" MouseLeave="Arrow_MouseLeave" StrokeThickness="3" Stroke="Gray" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                        <!-- New lines for Defer connectivity -->
                        <Line x:Name="Line_Defer_Backup" MouseEnter="Arrow_MouseEnter" MouseLeave="Arrow_MouseLeave" StrokeThickness="3" Stroke="Gray" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                        <Line x:Name="Line_Defer_Copy" MouseEnter="Arrow_MouseEnter" MouseLeave="Arrow_MouseLeave" StrokeThickness="3" Stroke="Gray" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                        <!-- New line: NotSelected -> Backup -->
                        <Line x:Name="Line_NotSelected_Backup" MouseEnter="Arrow_MouseEnter" MouseLeave="Arrow_MouseLeave" StrokeThickness="3" Stroke="Gray" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />

                        <!-- Arrowhead polygons for each line -->
                        <Polygon x:Name="Head_LidarrURL_Releases" Points="0,00,00,0" Fill="Gray" Panel.ZIndex="1" />
                        <Polygon x:Name="Head_Releases_Import" Points="0,00,00,0" Fill="Gray" Panel.ZIndex="1" />
                        <Polygon x:Name="Head_Releases_NotSelected" Points="0,00,00,0" Fill="Gray" Panel.ZIndex="1" />
                        <Polygon x:Name="Head_Releases_Defer" Points="0,00,00,0" Fill="Gray" Panel.ZIndex="1" />

                        <Polygon x:Name="Head_LidarrURL_Backup" Points="0,00,00,0" Fill="Gray" Panel.ZIndex="1" />
                        <Polygon x:Name="Head_Import_Copy" Points="0,00,00,0" Fill="Gray" Panel.ZIndex="1" />
                        <Polygon x:Name="Head_NotSelected_Copy" Points="0,00,00,0" Fill="Gray" Panel.ZIndex="1" />
                        <!-- New arrowheads for Defer lines -->
                        <Polygon x:Name="Head_Defer_Backup" Points="0,00,00,0" Fill="Gray" Panel.ZIndex="1" />
                        <Polygon x:Name="Head_Defer_Copy" Points="0,00,00,0" Fill="Gray" Panel.ZIndex="1" />
                        <!-- New arrowhead for NotSelected->Backup -->
                        <Polygon x:Name="Head_NotSelected_Backup" Points="0,00,00,0" Fill="Gray" Panel.ZIndex="1" />
                    </Canvas>

                    <Grid x:Name="BoxesGrid" Panel.ZIndex="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Top Center: LidarrURL -->
                        <Border x:Name="Box_LidarrURL" Grid.Row="0" Grid.Column="1" Margin="12" Padding="10" CornerRadius="6" Background="LightGray" MinHeight="80" MouseEnter="Box_MouseEnter" MouseLeave="Box_MouseLeave">
                            <StackPanel>
                                <TextBlock Text="Lidarr URL" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="🔗" FontSize="28" HorizontalAlignment="Center" Margin="6" />
                            </StackPanel>
                        </Border>

                        <!-- Row1 Center: LidarrReleases -->
                        <Border x:Name="Box_LidarrReleases" Grid.Row="1" Grid.Column="1" Margin="12" Padding="10" CornerRadius="6" Background="LightGray" MinHeight="80" MouseEnter="Box_MouseEnter" MouseLeave="Box_MouseLeave">
                            <StackPanel>
                                <TextBlock Text="Lidarr Releases" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="🎵" FontSize="28" HorizontalAlignment="Center" Margin="6" />
                            </StackPanel>
                        </Border>

                        <!-- Middle Left (now Row2): LidarrImport -->
                        <Border x:Name="Box_LidarrImport" Grid.Row="2" Grid.Column="0" Margin="12" Padding="10" CornerRadius="6" Background="LightGray" MinHeight="80" MouseEnter="Box_MouseEnter" MouseLeave="Box_MouseLeave">
                            <StackPanel>
                                <TextBlock Text="Lidarr Import" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="📂" FontSize="28" HorizontalAlignment="Center" Margin="6" />
                            </StackPanel>
                        </Border>

                        <!-- Middle Middle (Row2): NotSelected -->
                        <Border x:Name="Box_NotSelected" Grid.Row="2" Grid.Column="1" Margin="12" Padding="10" CornerRadius="6" Background="LightGray" MinHeight="80" MouseEnter="Box_MouseEnter" MouseLeave="Box_MouseLeave">
                            <StackPanel Height="76" VerticalAlignment="Bottom">
                                <TextBlock Text="Not-Selected" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="🚫" FontSize="28" HorizontalAlignment="Center" Margin="6" />
                            </StackPanel>
                        </Border>

                        <!-- Middle Right (Row2): Defer -->
                        <Border x:Name="Box_Defer" Grid.Row="2" Grid.Column="2" Margin="12" Padding="10" CornerRadius="6" Background="LightGray" MinHeight="80" MouseEnter="Box_MouseEnter" MouseLeave="Box_MouseLeave">
                            <StackPanel>
                                <TextBlock Text="Defer" FontWeight="Bold" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                <TextBlock Text="⏸️" FontSize="28" HorizontalAlignment="Center" Margin="6" />
                            </StackPanel>
                        </Border>

                        <!-- Bottom Left (Row3): BackupRootFolder -->
                        <Border x:Name="Box_BackupRootFolder" Grid.Row="3" Grid.Column="0" Margin="12" Padding="10" CornerRadius="6" Background="LightGray" MinHeight="80" MouseEnter="Box_MouseEnter" MouseLeave="Box_MouseLeave">
                            <StackPanel>
                                <TextBlock Text="Backup Root" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="📁" FontSize="28" HorizontalAlignment="Center" Margin="6" />
                            </StackPanel>
                        </Border>

                        <!-- Bottom Right (Row3): CopyImportedFiles -->
                        <Border x:Name="Box_CopyImportedFiles" Grid.Row="3" Grid.Column="2" Margin="12" Padding="10" CornerRadius="6" Background="LightGray" MinHeight="80" MouseEnter="Box_MouseEnter" MouseLeave="Box_MouseLeave">
                            <StackPanel>
                                <TextBlock Text="Copy Files" FontWeight="Bold" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                <!-- Use Segoe MDL2 Assets glyph for copy (U+E8C8) -->
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8C8;" FontSize="28" HorizontalAlignment="Center" Margin="6" />
                            </StackPanel>
                        </Border>

                    </Grid>
                </Grid>

                <!-- Status bar row -->
                <Border Grid.Row="1" BorderThickness="1,0,0,0" BorderBrush="LightGray" Padding="4" Background="WhiteSmoke">
                    <TextBlock x:Name="ArrowStatusText" Text="" VerticalAlignment="Center" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
