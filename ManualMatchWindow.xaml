<Window x:Class="LidairrCompanion.ManualMatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Artist" Height="400" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Loaded="Window_Loaded">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txt_Context" Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,8" />

        <DockPanel Grid.Row="1" Margin="0,0,0,8">
            <TextBox x:Name="txt_Search" Width="260" HorizontalAlignment="Left" VerticalAlignment="Center" DockPanel.Dock="Left" />
            <Button x:Name="btn_SearchExternal" Content="Search External" Width="110" Margin="8,0,0,0" Click="btn_SearchExternal_Click" />
            <Button x:Name="btn_Reset" Content="Reset" Width="60" Margin="8,0,0,0" Click="btn_Reset_Click" />
        </DockPanel>

        <ListBox x:Name="list_Artists" Grid.Row="2" DisplayMemberPath="DisplayName" SelectionMode="Single" />

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="btn_Ok" Content="OK" Width="80" Margin="0,0,8,0" Click="btn_Ok_Click" IsEnabled="False"/>
            <Button x:Name="btn_Cancel" Content="Cancel" Width="80" Click="btn_Cancel_Click"/>
        </StackPanel>

        <!-- Status text at the very bottom -->
        <TextBlock x:Name="txt_Status" Grid.Row="4" Text="" Margin="0,8,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" />
    </Grid>
</Window>