<Window x:Class="LidairrCompanion.ManualMatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Artist" Height="400" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txt_Context" Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,8" />

        <ListBox x:Name="list_Artists" Grid.Row="1" DisplayMemberPath="ArtistName" SelectionMode="Single" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button x:Name="btn_Ok" Content="OK" Width="80" Margin="0,0,8,0" Click="btn_Ok_Click" IsEnabled="False"/>
            <Button x:Name="btn_Cancel" Content="Cancel" Width="80" Click="btn_Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>